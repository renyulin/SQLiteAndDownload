<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sql_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="sql" />

    <Button
        android:id="@+id/sql_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="sql_add" />

    <Button
        android:id="@+id/sql_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="sql_update" />

    <Button
        android:id="@+id/sql_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="sql_delete" />

    <Button
        android:id="@+id/sql_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="sql_query" />

    <Button
        android:id="@+id/query_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="sqlClick"
        android:text="query_all" />
</LinearLayout>